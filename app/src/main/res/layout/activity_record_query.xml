<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                app:iiv_color="@color/md_white"
                app:iiv_icon="ion-ios-arrow-left" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成绩查询"
            android:textColor="@color/md_white"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="队伍编号"
            android:textColor="@color/md_black"
            android:textSize="18dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metTeamNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:textSize="16dp"
            app:met_baseColor="@color/md_grey_800"
            app:met_clearButton="true"
            app:met_primaryColor="@color/md_grey_300" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属线路"
            android:textColor="@color/md_black"
            android:textSize="18dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/metLineNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textCursorDrawable="@null"
            android:textSize="16dp"
            app:met_baseColor="@color/md_grey_800"
            app:met_clearButton="true"
            app:met_primaryColor="@color/md_grey_300" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否到达"
            android:textColor="@color/md_black"
            android:textSize="18dp" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/mbsIsArrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:textCursorDrawable="@null"
            android:textSize="16dp"
            app:met_baseColor="@color/md_grey_800"
            app:met_primaryColor="@color/md_grey_300" />

    </LinearLayout>

    <TextView
        android:id="@+id/btnQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="8dp"
        android:text="查    询"
        android:textColor="@color/md_white"
        android:textSize="18dp"
        android:textStyle="bold" />

</LinearLayout>

